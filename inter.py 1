import requests
import matplotlib.pyplot as plt

# -----------------------------
# Configuration
# -----------------------------
API_KEY = "YOUR_API_KEY_HERE"   # Replace with your OpenWeatherMap API key
CITY = "Hyderabad"
URL = f"https://api.openweathermap.org/data/2.5/forecast?q={CITY}&appid={API_KEY}&units=metric"

# -----------------------------
# Fetch Data from API
# -----------------------------
response = requests.get(URL)
data = response.json()

# Check API success
if data["cod"] != "200":
    print("Error fetching data:", data)
    exit()

# -----------------------------
# Extract required values
# -----------------------------
dates = []
temperatures = []
humidity = []
pressure = []

for item in data["list"]:
    dates.append(item["dt_txt"])
    temperatures.append(item["main"]["temp"])
    humidity.append(item["main"]["humidity"])
    pressure.append(item["main"]["pressure"])

# -----------------------------
# Visualization - Temperature
# -----------------------------
plt.figure(figsize=(12, 5))
plt.plot(dates, temperatures, marker='o')
plt.xticks(rotation=45)
plt.title(f"Temperature Forecast for {CITY}")
plt.xlabel("Date & Time")
plt.ylabel("Temperature (Â°C)")
plt.tight_layout()
plt.show()

# -----------------------------
# Visualization - Humidity
# -----------------------------
plt.figure(figsize=(12, 5))
plt.plot(dates, humidity, marker='s')
plt.xticks(rotation=45)
plt.title(f"Humidity Forecast for {CITY}")
plt.xlabel("Date & Time")
plt.ylabel("Humidity (%)")
plt.tight_layout()
plt.show()

# -----------------------------
# Visualization - Pressure
# -----------------------------
plt.figure(figsize=(12, 5))
plt.plot(dates, pressure, marker='^')
plt.xticks(rotation=45)
plt.title(f"Pressure Forecast for {CITY}")
plt.xlabel("Date & Time")
plt.ylabel("Pressure (hPa)")
plt.tight_layout()
plt.show()
